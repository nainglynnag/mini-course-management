<%- include('../partials/header') %>

<div class="flex justify-between items-center mb-6">
  <h2 class="text-3xl font-semibold">Courses</h2>
  <a
    href="/courses/create"
    class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700"
    >+ Add Course</a
  >
</div>

<table class="min-w-full bg-white rounded shadow overflow-hidden">
  <thead class="bg-gray-200">
    <tr>
      <th class="py-2 px-4 text-left">Title</th>
      <th class="py-2 px-4 text-left">Description</th>
      <th class="py-2 px-4 text-left">Instructor</th>
      <th class="py-2 px-4 text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% courses.forEach(course => { %>
    <tr class="border-b hover:bg-gray-50">
      <td class="py-2 px-4"><%= course.title %></td>
      <td class="py-2 px-4"><%= course.description %></td>
      <td class="py-2 px-4"><%= course.instructor_name || 'N/A' %></td>
      <td class="py-2 px-4 text-center space-x-2">
        <a
          href="/courses/update/<%= course.id %>"
          class="bg-yellow-400 text-white px-3 py-1 rounded hover:bg-yellow-500"
          >Edit</a
        >
        <a
          href="/courses/delete/<%= course.id %>"
          class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600"
          onclick="return confirm('Delete this course?')"
          >Delete</a
        >
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

