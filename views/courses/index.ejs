<h2 class="text-3xl font-bold mb-6">Courses</h2>

<a
  href="/courses/create"
  class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 mb-4 inline-block"
  >+ Add Course</a
>

<table class="w-full bg-white shadow rounded-lg overflow-hidden">
  <thead class="bg-gray-200">
    <tr>
      <th class="py-3 px-4 text-center">No.</th>
      <th class="py-3 px-4 text-left">Title</th>
      <th class="py-3 px-4 text-left">Category</th>
      <th class="py-3 px-4 text-left">Instructor</th>
      <th class="py-3 px-4 text-left">Description</th>
      <th class="py-3 px-4 text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% courses.forEach(course => { %>
    <tr class="border-b even:bg-slate-100 hover:bg-gray-200">
      <td class="py-2 px-4 text-center"><%= course.id %></td>
      <td class="py-2 px-4"><%= course.title %></td>
      <td class="py-2 px-4"><%= course.category_name || 'N/A' %></td>
      <td class="py-2 px-4"><%= course.instructor_name || 'N/A' %></td>
      <td class="py-2 px-4"><%= course.description %></td>
      <td class="py-2 px-4 text-center space-x-2 flex">
        <a href="/courses/update/<%= course.id %>" class="hover:text-blue-500 active:scale-90 duration-300">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="size-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"
            />
          </svg>
        </a>
        <a
          href="/courses/delete/<%= course.id %>"
          onclick="return confirm('Delete this course?')"
          class="text-red-600 hover:text-red-400 active:scale-90 duration-300"
        >
          <div>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"
              />
            </svg>
          </div>
        </a>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

