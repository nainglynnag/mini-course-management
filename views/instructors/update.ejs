<%- include('../partials/header') %>

<h2 class="text-3xl font-semibold mb-6">Update Instructor</h2>
<form
  action="/instructors/update/<%= instructor.id %>"
  method="POST"
  class="bg-white p-6 rounded shadow max-w-xl"
>
  <div class="mb-4">
    <label class="block font-semibold mb-1">Name</label>
    <input
      type="text"
      name="name"
      value="<%= instructor.name %>"
      class="w-full border border-gray-300 rounded px-3 py-2"
      required
    />
  </div>
  <div class="mb-4">
    <label class="block font-semibold mb-1">Email</label>
    <input
      type="email"
      name="email"
      value="<%= instructor.email %>"
      class="w-full border border-gray-300 rounded px-3 py-2"
      required
    />
  </div>
  <button
    type="submit"
    class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700"
  >
    Update
  </button>
  <a href="/instructors" class="ml-4 text-gray-600 hover:underline">Cancel</a>
</form>

<%- include('../partials/footer') %>
