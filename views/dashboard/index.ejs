<h2 class="text-3xl font-bold mb-6">Dashboard Overview</h2>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="bg-white shadow p-6 rounded-lg border-l-4 border-blue-500">
    <h3 class="text-lg font-medium text-gray-700">Total Students</h3>
    <p class="text-3xl font-bold text-blue-700 mt-2"><%= totalStudents %></p>
  </div>
  <div class="bg-white shadow p-6 rounded-lg border-l-4 border-green-500">
    <h3 class="text-lg font-medium text-gray-700">Total Instructors</h3>
    <p class="text-3xl font-bold text-green-700 mt-2">
      <%= totalInstructors %>
    </p>
  </div>
  <div class="bg-white shadow p-6 rounded-lg border-l-4 border-purple-500">
    <h3 class="text-lg font-medium text-gray-700">Total Courses</h3>
    <p class="text-3xl font-bold text-purple-700 mt-2"><%= totalCourses %></p>
  </div>
</div>

<h3 class="text-2xl font-semibold mb-4">Courses by Category</h3>
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <% categoryStats.forEach(cat => { %>
  <div class="bg-white shadow p-4 rounded-lg border-l-4 border-gray-400">
    <h4 class="text-md font-semibold text-gray-600"><%= cat.name %></h4>
    <p class="text-xl font-bold text-gray-800 mt-1">
      <%= cat.course_count %> Courses
    </p>
  </div>
  <% }) %>
</div>

